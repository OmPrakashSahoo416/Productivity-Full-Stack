generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  relationMode = "prisma"
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   @unique
  @@map(name: "users")
}
// db text to store larger text like urls in this case else default to 191 characters
model Board {
  id            String       @default(cuid()) @id
  title         String
  imageUrl      String       @db.Text
  org_id        String
  
  @@map(name: "boards")
}


